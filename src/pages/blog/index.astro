---
import MainLayout from "../../layouts/MainLayout.astro"
const posts = await Astro.glob("../../posts/*.md")
---

<MainLayout title="mgBlog - Blog Posts">
  <section class="grid grid-cols-2 p-4 text-lg gap-2">
    {
      posts.map((post) => {
        const { frontmatter } = post
        return (
          <div class="p-2 border-2 hover:border-black hover:shadow-[4px_4px] transition-all duration-200 rounded-lg">
            <a href={`/blog/posts/${frontmatter.slug}/`}>
              <div class="aspect-video rounded-sm">
                <img class="w-full h-full object-cover object-center" src={frontmatter.placeholderURL} alt={`${frontmatter.title}'s placeholder'`} />
              </div>
              <div class="grid">
                <span class="text-3xl font-bold">{frontmatter.title}</span>
                <span class="text-xl">{frontmatter.description}</span>
              </div>
            </a>
          </div>
        )
      })
    }
  </section>
</MainLayout>
